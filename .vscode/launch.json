{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Flask",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "args": [
        "--app", "myapp.py",
        "run",
        "--host=0.0.0.0",
        "--port=5000",
        "--reload",
        "--debug"
      ],
      "jinja": true,
      "envFile": "${workspaceFolder}/.env"
    }
  ]
}